@using TicketSystem.Web.ViewModels.Tickets
@model int?
@{
    ViewBag.Title = "All";
}

@using (Html.BeginForm("All", "Tickets", FormMethod.Get))
{
    @(Html.Kendo()
.DropDownList()
.Name("category")
    .HtmlAttributes(new { style = "width: 100%" })
.DataTextField("Text")
.DataValueField("Value")
.OptionLabel("Choose category")
.DataSource(dataSource =>
{
    dataSource.Read(read => read.Action("GetCategories", "Tickets", new {category = Model }));
}))
    
    <input type="submit"class="btn btn-default" />
}



<br />
<br />

<div class="container">
    <div class="row">
        <div class="col-md-3 text-center">
            <h3>Title</h3>
        </div>
        <div class="col-md-3 text-center">
            <h3>Category</h3>
        </div>
        <div class="col-md-3 text-center">
            <h3>Author</h3>
        </div>
        <div class="col-md-3 text-center">
            <h3>Priority</h3>
        </div>
    </div>
    <br />
</div>



@(Html.Kendo()
.ListView<ListTicketViewModel>()
.TagName("div")
.HtmlAttributes(new { @class = "container" })
.Name("all-tickets")
.Pageable()
.ClientTemplateId("all-tickets-template")
.DataSource(dataSource =>
    {
        dataSource
            .ServerOperation(true)
            .PageSize(5)
            .Read(read => read.Action("ReadTickets", "Tickets"));
    }))

<script id="all-tickets-template" type="text/x-kendo-tmpl">
    <div class="row">
        <div class="col-md-3 text-center">
            <a href="/Tickets/Details/#=Id #">#= TicketTitle #</a>
        </div>
        <div class="col-md-3 text-center">
            #= CategoryName #
        </div>
        <div class="col-md-2 text-center">
            #= AuthorUserName #
        </div>
        <div class="col-md-2 text-center">
            #= Priority #
        </div>
    </div>
    <br />
</script>